{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Creates notification lambda function",
  "Parameters": {
    "token": {
      "Description": "Github Token or bitbucket user:apppassword",
      "Type": "String",
      "NoEcho": true,
      "Default": ""
    },
    "SourceBucket": {
      "Description": "Output Bucket where source and event is stored",
      "Type": "String",
      "Default": ""
    },
    "SourceBucketObjectKey": {
      "Description": "Location of file to download",
      "Type": "String",
      "Default": ""
    },
    "PipelineName": {
      "Description": "Name of the attached pipeline",
      "Type": "String",
      "Default": ""
    }
  },
  "Resources": {
    "NotifySecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": {
          "Fn::Sub": "${PipelineName}-NotifySecret"
        },
        "Description": "Credentials for GH or BB REST APIs",
        "SecretString": {
          "Ref": "token"
        }
      }
    },
    "NotificationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
          {
            "Effect": "Allow",
            "Principal": {
              "Service": "lambda.amazonaws.com"
            },
            "Action": "sts:AssumeRole"
          }
          ]
        },
        "Path": "/",
        "Policies": [
        {
          "PolicyName": "NotificationLambda",
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:GetObject",
                "s3:GetObjectVersion"
              ],
              "Resource": "arn:aws:s3:::*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": "*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "codepipeline:GetPipeline",
                "codepipeline:GetPipelineExecution"
              ],
              "Resource": {
                "Fn::Sub": "arn:aws:codepipeline:${AWS::Region}:${AWS::AccountId}:${PipelineName}"
              }
            },
            {
              "Effect": "Allow",
              "Action": [
                "secretsmanager:GetSecretValue"
              ],
              "Resource": {
                "Ref": "NotifySecret"
              }
            }
            ]
          }
        }
        ]
      }
    },
    "notificationFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "lambda_function.lambda_handler",
        "MemorySize": 192,
        "Role": {
          "Fn::GetAtt": [
            "NotificationRole",
            "Arn"
          ]
        },
        "Runtime": "python3.7",
        "Timeout": 300,
        "Environment": {
          "Variables": {
            "SOURCE_BUCKET": {
              "Ref": "SourceBucket"
            },
            "SOURCE_BUCKET_OBJECT_KEY": {
              "Ref": "SourceBucketObjectKey"
            }
          }
        },
        "CodeUri": "."
      }
    }
  },
  "Outputs": {
    "notificationFunctionArn": {
      "Value": {
        "Fn::GetAtt": ["notificationFunction","Arn"]
      }
    }
  }

}